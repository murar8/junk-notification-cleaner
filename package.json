{
  "name": "junk-notification-cleaner",
  "version": "0.1.0",
  "description": "GNOME extension to delete notifications when an application window is focused or closed.",
  "type": "module",
  "private": true,
  "author": "Lorenzo Murarotto",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "compile-schemas": "glib-compile-schemas schemas",
    "prepackage": "npm run build",
    "package": "gnome-extensions pack --force --extra-source=dist/extension.js --extra-source=dist/prefs.js --schema=schemas/org.gnome.shell.extensions.junk-notification-cleaner.gschema.xml --out-dir=dist",
    "preinstall-extension": "npm run package && npm run compile-schemas",
    "install-extension": "gnome-extensions install --force junk-notification-cleaner@murar8.github.com.shell-extension.zip",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@girs/gjs": "^4.0.0-beta.23",
    "@girs/gnome-shell": "^48.0.2",
    "@types/node": "^22.15.29",
    "@vitest/coverage-v8": "^3.1.4",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
