{
  "files": [
    "ambient.d.ts",
    "src/extension.ts",
    "src/prefs.ts",
    "src/isMatch.ts"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
